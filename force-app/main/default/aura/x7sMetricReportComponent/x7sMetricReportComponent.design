    <design:attribute name="fieldName1" label="Metric 1 Field Name" description="API name or label for the field containing data to be displayed"/>
    <design:attribute name="label1" label="Metric 1 Label" description="Label displayed beneath the metric value"/>
    
    <design:attribute name="iconName1" label="Metric 1 Icon" description="SLDS Icon to display to the right of the metric value" default="action:check"/>
    <design:attribute name="iconHoverText1" label="Metric 1 Icon Tooltip" description="Text to display when a user hovers over the metric icon"/>
    <design:attribute name="iconColor1" label="Metric 1 Icon Color" description="Hex color for the icon"/>
    
