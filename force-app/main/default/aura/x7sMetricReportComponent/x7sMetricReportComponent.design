<design:component label="7S Metric Report">
    <design:attribute name="titleAlignment" label="Metric Title Alignment" datasource="Left,Center,Right" default="Left" description="Select the alignment for the metric title text. This setting applies to all metrics displayed in the component."/>
    <design:attribute name="titleSize" label="Metric Title Size" datasource="Small,Medium,Large" default="Medium" description="Size of the title text"/>
    <design:attribute name="metrictoDisplay" label="Total Metrics" datasource="1,2,3,4" default="1" description="Select the total number of metrics to display with this component"/>
    
    <design:attribute name="isBold" label="Bold Values"  description="If checked, numeric values will appear bold for all metrics in this component"/>
    
