<aura:component access="global">
    
  <aura:attribute access="global" name="svgPath"        default="" type="String" description="the path for the icon in the static resource, this will be use in a SVG use tag" />
  <aura:attribute access="global" name="sitePrefix"     default="" type="String" description="the path for the icon in the static resource, this will be use in a SVG use tag" />
  <aura:attribute access="global" name="name"           default="" type="String" description="Symbol name of icon" />
  <aura:attribute access="global" name="class"          default="" type="String" description="the class of this SVG tag, can be use for CSS purpose" />
  <aura:attribute access="global" name="containerClass" default="" type="String" description="Container class name for span container of icon" />
  <aura:attribute access="global" name="category"       default="" type="String" description="Category of icon- action, standard, utility etc." />
  <aura:attribute access="global" name="size"           default="" type="String" description="Size of icon-- small, medium, large" />
  <aura:attribute access="global" name="assistiveText"  default="" type="String" description="Description name of icon" />
  <span aura:id="container" class="{!v.containerClass}">
    <span aura:id="assistiveText" class="slds-assistive-text">{!v.assistiveText}</span>
  </span>
</aura:component>